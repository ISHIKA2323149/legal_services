<h2>Hi! <%= current_user.name %></h2>
<br>
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

<div class="postcard-form">
  <%= form_with model: @case, class: "form-horizontal" do |form| %>
    <div class="form-group">
      <%= form.label :case_name, class: "control-label col-sm-2" %>
      <div class="col-sm-10">
        <%= form.text_field :case_name, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= form.label :case_no, class: "control-label col-sm-2" %>
      <div class="col-sm-10">
        <%= form.text_field :case_no, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= form.label :case_description, class: "control-label col-sm-2" %>
      <div class="col-sm-10">
        <%= form.text_area :case_description, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= form.label :court_name, class: "control-label col-sm-2" %>
      <div class="col-sm-10">
        <%= form.text_field :court_name, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= form.label :case_status, class: "control-label col-sm-2"%>
      <div class = "col-sm-10">
        <%= form.select :case_status, {"running"=> :running,"pending"=> :pending,"closed" => :closed, "dismissed" => :dismissed}, {} , class: "form-control"%>
      </div>
    </div>

    <div class="form-group">
      <%= form.label :filing_date, class: "control-label col-sm-2" %>
      <div class="col-sm-10">
        <%= form.date_field :filing_date, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= form.label :Hearing_date, class: "control-label col-sm-2" %>
      <div class="col-sm-10">
        <%= form.date_field :Hearing_date, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= form.label :case_category, class: "control-label col-sm-2" %>
      <div class="col-sm-10">
        <%= form.text_field :case_category, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= form.label :additional_notes, class: "control-label col-sm-2" %>
      <div class="col-sm-10">
        <%= form.text_field :additional_notes, class: "form-control" %>
      </div>
    </div> 

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= form.submit "Submit", class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div>
<style>
  .postcard-form {
    max-width: 600px;
    margin: 0 auto;
    padding: 30px;
    background-color: #f8f9fa;
    border-radius: 10px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
  }

  .form-group {
    margin-bottom: 20px;
  }

  label {
    font-weight: bold;
    color: #333;
    margin-bottom: 5px;
  }

  .form-control {
    border: 2px solid #ccc;
    border-radius: 5px;
    color: #333;
    background-color: #f0f0f0;
    box-shadow: inset 5px 5px 8px #cbced1, inset -5px -5px 8px #ffffff;
  }

  .btn-primary {
    background-color: #17a2b8;
    border: none;
    border-radius: 15px;
    color: #fff;
    font-weight: bold;
    padding: 10px 20px;
    box-shadow: 5px 5px 8px rgba(0, 0, 0, 0.1);
    transition: background-color 0.3s;
    width: 100%;
  }

  .btn-primary:hover {
    background-color: #138496;
  }
</style>
