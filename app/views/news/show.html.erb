<div class="news-container">
  <h2 class="news-title">Title:</h2>
  <div class="news-content"><%= @news.title %></div>

  <h2 class="news-title">Body:</h2>
  <div class="news-content"><%= @news.body %></div>

  <div class="news-actions">
  <% if News.find_by(id: current_user.id) %>
    <%= link_to "Edit", edit_news_path, class: "news-edit-btn" %>
    <%= button_to "Delete", news_path, method: :delete, class: "news-delete-btn", data: { confirm: "Are you sure you want to delete this news item?" } %>
  <% end %>
  </div>
</div>
<style>
  .news-container {
    max-width: 800px;
    margin: 0 auto;
    background-color: #f8f9fa;
    padding: 20px;
    border-radius: 10px;
    box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
    border: 1px solid #ddd;
  }

  .news-title {
    font-size: 24px;
    color: #17a2b8;
    margin-bottom: 10px;
  }

  .news-content {
    font-size: 16px;
    color: #555;
    line-height: 1.6;
    margin-bottom: 20px;
    border-bottom: 1px solid #ddd;
    padding-bottom: 10px;
  }

  .news-actions {
    display: flex;
    justify-content: flex-end;
    align-items: center;
    gap: 10px;
    margin-top: 20px;
  }

  .news-edit-btn,
  .news-delete-btn {
    padding: 10px 20px;
    border: none;
    border-radius: 5px;
    font-size: 16px;
    font-weight: bold;
    text-transform: uppercase;
    cursor: pointer;
    transition: background-color 0.3s, color 0.3s;
    border: 1px solid #17a2b8;
    background: linear-gradient(to bottom, #17a2b8, #138496);
    color: #fff;
  }

  .news-delete-btn {
    background: linear-gradient(to bottom, #dc3545, #c82333);
  }

  .news-edit-btn:hover,
  .news-delete-btn:hover {
    background: linear-gradient(to bottom, #138496, #0c6b73);
  }

  .news-actions button {
    width: 100px;
  }
</style>
