<!-- Bootstrap CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<!-- Bootstrap JS (Optional: If you need to use Bootstrap JavaScript components) -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>


<%= form_with model: @news do |form| %>
  <div class="form-group">
    <%= form.label :title %><br>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :body %><br>
    <%= form.text_area :body, class: "form-control" %>
  </div>

  <div class="text-center">
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>


<style>
/* Adjust the form container's max-width */
form {
  max-width: 500px;
  margin: 0 auto;
}

/* Customize the form labels */
.form-label {
  font-weight: bold;
  color: #17a2b8; /* Turquoise color */
}

/* Style the form inputs with colorful borders */
.colorful-input {
  border: 2px solid #17a2b8;
  border-radius: 10px;
  color: #555;
  padding: 10px;
  transition: border-color 0.3s;
}

/* Style the form inputs on focus */
.colorful-input:focus {
  outline: none;
  border-color: #138496; /* Darker turquoise color on focus */
  box-shadow: 0 0 8px rgba(23, 162, 184, 0.5);
}

/* Customize the submit button's background color and size */
.colorful-button {
  background-color: #17a2b8;
  border: none;
  padding: 12px 24px;
  border-radius: 5px;
  font-size: 18px;
  font-weight: bold;
  text-transform: uppercase;
}

/* Style the submit button on hover */
.colorful-button:hover {
  background-color: #138496; /* Darker turquoise color on hover */
}
</style>
