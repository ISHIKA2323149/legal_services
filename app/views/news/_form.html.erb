<h1 class="title">ADD NEWS</h1>
<%= form_with model: @news do |form| %>
  <div class="form-group">
    <%= form.label :title, class: "form-label" %><br>
    <%= form.text_field :title, class: "colorful-input" %>
  </div>

  <div class="form-group">
    <%= form.label :body, class: "form-label" %><br>
    <%= form.text_area :body, class: "colorful-input" %>
  </div>

  <div class="text-center">
    <%= form.submit "Submit", class: "colorful-button" %>
  </div>
<% end %>

<style>
  form {
    max-width: 500px;
    margin: 0px auto;
    background-color: #f8f9fa;
    padding: 20px;
    border-radius: 10px;
    box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
  }

  .title{
    text-align: center;
    color: black;
  }
  .form-label {
    font-weight: bold;
    color: #17a2b8;
  }

  .colorful-input {
    border: 2px solid #17a2b8;
    border-radius: 10px;
    color: #555;
    padding: 10px;
    transition: border-color 0.3s;
    width: 100%;
    box-sizing: border-box;
  }

  .colorful-input:focus {
    outline: none;
    border-color: #138496;
    box-shadow: 0 0 8px rgba(23, 162, 184, 0.5);
  }

  .colorful-button {
    background-color: #17a2b8;
    border: none;
    padding: 12px 24px;
    border-radius: 5px;
    font-size: 18px;
    font-weight: bold;
    text-transform: uppercase;
    color: #fff;
    cursor: pointer;
    transition: background-color 0.3s;
  }

  .colorful-button:hover {
    background-color: #138496;
  }
</style>
