<h1>Lawyer Details</h1>
<div class="lawyer-cards-container">
  <% @lawyer_details.each do |lawyer_detail| %>
    
      <div class="lawyer-card">
        <h2 class="lawyer-name"><%= link_to lawyer_detail.user.name, lawyer_detail %></h2>
        <h2 class="lawyer-name"><%= link_to lawyer_detail.practice_field_name, lawyer_detail %></h2>
        <% if lawyer_detail.user.id != current_user.id %>
        <%= button_to 'Hire this lawyer', hire_lawyer_path, method: :post, params: { lawyer_email: lawyer_detail.user.email }, class: 'hire-btn' %>
        <% end %>
      </div>
    
  <% end %>
</div>

<style>
  h1 {
    text-align: center;
    color: black;
  }

  .lawyer-cards-container {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 20px;
    margin-top: 30px;
  }

  .lawyer-card {
    max-width: 300px;
    padding: 20px;
    border: 1px solid #ddd;
    border-radius: 10px;
    box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
    background-color: #fff;
    text-align: center;
  }

  .lawyer-name {
    color: #17a2b8;
    font-size: 20px;
    margin-bottom: 10px;
  }

  .hire-btn {
    background-color: #17a2b8;
    border: none;
    padding: 10px 20px;
    border-radius: 5px;
    font-size: 16px;
    font-weight: bold;
    text-transform: uppercase;
    color: #fff;
    cursor: pointer;
    transition: background-color 0.3s;
    width: 100%;
  }

  .hire-btn:hover {
    background-color: #138496;
  }
</style>
